<Window x:Class="Inschrijven.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Inschrijven.Views"
        mc:Ignorable="d"
        Title="Inschrijven">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <!--Header-->
        <StackPanel Name="spHeader"
                    Orientation="Horizontal"
                    Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>

        <!--Content-->
        <Frame Name="frmFormulier"
               Grid.Row="1" Grid.Column="0" Padding="10"/>

        <Frame Name="frmUitleg"
               Grid.Row="1" Grid.Column="1"/>

        <!--Footer-->
        <StackPanel Name="spFooter"
                    Orientation="Horizontal"
                    Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
